@model PartnerViewModel
@{
    ViewData["Title"] = "SearchPartnerById";
}

<h3>Search for Partner by ID</h3>

<div class="row mt-5">
    <form class="col-lg-6" asp-controller="Partner" asp-action="SearchPartnerById" method="get">
        <div class="row">
            <div class="col-sm-9">
                <input asp-for="@Model.Id" placeholder="Search..." class="form-control" />
                <span asp-validation-for="@Model.Id" class="text-danger"></span>
            </div>
            <div class="col-sm-3">
                <button type="submit" class="btn btn-success">Search!</button>
            </div>
        </div>
    </form>
</div>

<div class="row mt-5">
    <div class="col-lg-6">
        @if (Model != null)
        {

            if (Model.Id == 0 || Model.SearchResult == null)
            {
                <p class="alert alert-info">There is no partner with ID: @Model.Id</p>
            }
            else
            {
                <partial name="_PartnerPartial" model="Model.SearchResult" />
            }
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}