@model ProductViewModel

@*<partial name="_Search" />*@

@*<partial name="_SearchProduct" />*@

<h3>Search for Product by Name</h3>

<div class="row mt-5">
    <form class="col-lg-6" asp-controller="Product" asp-action="SearchProductByName" method="get">
        <div class="row">
            <div class="col-sm-9">
                <input asp-for="@Model.Name" placeholder="Search..." class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="col-sm-3">
                <button type="submit" class="btn btn-success">Search!</button>
            </div>
        </div>
    </form>
</div>

<div class="row mt-5">
    <div class="col-lg-6">
        @if (Model != null)
        {

            if (string.IsNullOrWhiteSpace(Model.Name)||Model.SearchResults.Count==0)
            {
                <p class="alert alert-info">There are no products with name containing: @Model.Name</p>
            }
            else
            {
                foreach (var product in Model.SearchResults)
                {
                    <partial name="_ProductPartial" model="product" />

                }

            }
        }
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}