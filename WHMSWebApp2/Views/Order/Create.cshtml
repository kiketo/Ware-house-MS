@model OrderViewModel

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>

<h4>Order</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class=" form-group">
                <label asp-for="Partner" class="control-label"></label>
                <select asp-for="Partner" class="form-control" asp-items="Model.Partners">
                    <option value=""></option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>

                <select asp-for="Type" asp-items="@Html.GetEnumSelectList<OrderType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div>

                <div class="form-group">
                    <table>
                        <tr>
                            <td># | </td>
                            <td>Products | </</td>
                            <td>InStock | </</td>
                            <td>OrderedQuantity</td>

                        </tr>
                        @foreach (var pair in Model.WantedQuantityByProduct)
                        {
                            <tr>
                                <td><input type="checkbox" id="@pair.Key.ProductId" name="@pair.Key.Product.Name"></td>
                                <td> @pair.Key.Product.Name</td>
                                <td>@pair.Key.Quantity</td>
                                <td><input type="text" id="@pair.Value" name="Quantity" value=""></td>


                            </tr>

                        }

                    </table>
                </div>
                @*<button onclick="myFunction()">Try it</button>*@


                <span asp-validation-for="ProductsInWarehouse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea name="Comment"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Go Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function myFunction() {
            var btn = document.createElement("BUTTON");
            document.body.appendChild(btn);
        }
    </script>
}


