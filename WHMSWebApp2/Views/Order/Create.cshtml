@model OrderViewModel

@{
    ViewData["Title"] = "Create";
}
<script language="JavaScript">
    function selectWarehouse() {
        $("#contentwrapper").fadeOut(400);
        setTimeout(function () { $("#contentwrapper").load(@Model.Warehouse ).fadeIn(); }, 400);
    };</script>


<h1>Create</h1>

<h4>Order</h4>
<hr />
<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
    Select Warehouse...
    <span class="caret"></span>
</button>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>

                <select asp-for="Type" asp-items="@Html.GetEnumSelectList<OrderType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">





                <select asp-for="ProductsInWarehouse" class="custom-select" asp-items="Model.ProductsInWarehouse">
                    <option value=""></option>

                </select>
                <hr />
                <label asp-for="ProductsInWarehouse" class="control-label"></label>
                <select asp-for="ProductsInWarehouse" asp-items="Model.ProductsInWarehouse">
                    <option value=""></option>
                </select>
                @*<input type="text" name="@Model.ProductsQuantities.Where(pw=>pw.Key.Product==@Model.ProductsInWarehouse).FirstOrDefault().Value" value="" />*@
                <span asp-validation-for="Products" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class=" form-group">
                <label asp-for="Partner" class="control-label"></label>
                <select asp-for="Partner" class="form-control" asp-items="Model.Partners">
                    <option value=""></option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Go Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




