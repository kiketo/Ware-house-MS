@model OrderViewModel

@{
    ViewData["Title"] = "Create";
}
<h2>Create Order</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class=" form-group">
                <label asp-for="Partner" class="control-label">Choose partner</label>
                <select asp-for="Partner" class="form-control" asp-items="Model.Partners">
                    <option>Please choose partner</option>
                </select>
                <span asp-validation-for="Partner" class="text-danger"></span>
            </div>
            <div class=" form-group">
                <label asp-for="Type" class="control-label">Choose order type</label>
                <select asp-for="Type" class="form-control" asp-items="@Html.GetEnumSelectList<OrderType>()">
                    <option>Please choose order type</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="WarehouseId" class="control-label">Choose warehouse</label>
                <select asp-for="WarehouseId" placeholder="Choose a warehouse" class="form-control">
                    <option>Choose a warehouse</option>
                    @foreach (var wh in Model.ListWarehouses)
                    {
                        <option value="@wh.Id">@wh.Name</option>
                    }

                </select>

                <span asp-validation-for="WarehouseId" class="text-danger" ></span>
            </div>


            <hr />
            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
            {
                <p>
                    <a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Add New Warehouse</a>

                </p>

                <div class="collapse multi-collapse" id="multiCollapseExample1">
                    <div class="card card-body">
                        <label asp-for="Warehouse" class="control-label">Enter new warehouse name</label>
                        <input asp-for="Warehouse" placeholder="Enter new warehouse name" class="form-control" />
                        <span asp-validation-for="Warehouse" class="text-danger"></span>

                    </div>

                    <div class="card card-body">

                        <select asp-for="AddressId" placeholder="Choose an existing address" class="form-control">
                            <option>Choose an existing address</option>
                            @foreach (var address in Model.ListAddresses)
                            {
                                <option value="@address.Id">@address.Town.Name, @address.Text</option>
                            }

                        </select>
                        <span asp-validation-for="AddressId" class="text-danger"></span>

                    </div>
                    <div class="card card-body">

                        <select asp-for="TownId" placeholder="Choose an existing city" class="form-control">
                            <option>Choose an existing city</option>
                            @foreach (var town in Model.ListTowns)
                            {
                                <option value="@town.Id">@town.Name</option>
                            }

                        </select>

                        <input asp-for="AddressLine" placeholder="Enter New Address" class="form-control" />



                        <p>or</p>
                        <div class="form-group">
                            <input asp-for="Town" placeholder="Enter new city name" class="form-control" />

                            <input asp-for="AddressLine" placeholder="Enter New Address" class="form-control" />

                        </div>

                    </div>
                </div>
            }


            <hr />
            <div class="md-form mb-4 pink-textarea active-pink-textarea">

                <label asp-for="Comment" class="control-label"></label>
                <textarea id="form18" name="Comment" class="md-textarea form-control" rows="3" cols="60" placeholder="Add notes">Add notes</textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>

            </div>


            <div class="form-group">

                <input type="submit" value="Proceed" class="btn btn-primary" />
                <a class="btn btn-secondary" href='javascript:history.go(-1)'>Go Back</a>
            </div>
        </form>
    </div>
</div>


<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function myFunction() {
            var btn = document.createElement("BUTTON");
            document.body.appendChild(btn);
        }
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

}


