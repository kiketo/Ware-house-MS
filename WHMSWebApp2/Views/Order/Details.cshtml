@model OrderViewModel

@{
    ViewData["Title"] = "Details";
}


<div>
    <hr />
    <h2>Order #@Model.Id</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Partner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partner)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalValue)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Creator.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>
</div>
<div>

    <table id="table" class="table  table-mc-light-blue" border="0" style="width:30%; border:solid">
        <thead style="background-color:#022028
">
            <tr style="font-size:medium;">
                <th>Product list</th>
                <th>Ordered quantity</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var pair in Model.ProductsQuantity)
            {
                <tr>
                    <td> @pair.Key.Name</td>
                    <td>@pair.Value</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a class="btn btn-info" asp-action="Edit" style="width:70.59px" asp-route-id="@Model.Id">Edit</a>

    <!-- Button to Open the Modal -->
    <button type="button" class="btn btn-danger" style="width:70.59px" data-toggle="modal" data-target="#myModal">
        Delete
    </button>

    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Confirmation</h4>
                    <button type="button" style="width:70.59px" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    Are you sure you want to delete this product?
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <a type="button" style="width:70.59px" class="btn btn-green" data-dismiss="modal" href="#">Cancel</a>
                    <form asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <a class="btn btn-secondary" href='javascript:history.go(-1)'>Go Back</a>

</div>

