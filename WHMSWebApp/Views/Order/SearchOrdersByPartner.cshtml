@model OrderViewModel

@*<partial name="_SearchOrder" />*@

<h3>Search for Orders by Partner</h3>

<div class="row mt-5">
    <form class="col-lg-6" asp-controller="Order" asp-action="SearchOrdersByPartner" method="get">
        <div class="row">
            <div class="col-sm-9">
                <input asp-for="@Model.Partner" placeholder="Search..." class="form-control" />
                <span asp-validation-for="@Model.Partner" class="text-danger"></span>
            </div>
            <div class="col-sm-3">
                <button type="submit" class="btn btn-success">Search!</button>
            </div>
        </div>
    </form>
</div>

<div class="row mt-5">
    <div class="col-lg-6">
        @if (Model != null)
        {

            @*<a href="~/Views/Orders/Index.cshtml"> ~/Views/Orders/Index.cshtml </a>*@
            if (!string.IsNullOrWhiteSpace(Model.Partner) && !Model.SearchResults.Any())
            {
                <p class="alert alert-info">There are no orders</p>
            }
            else
            {
                foreach (var order in Model.SearchResults)
                {
                    <partial name="_OrderPartial" model="order" />
                }
            }
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
